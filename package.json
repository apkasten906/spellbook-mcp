{
  "name": "spellbook-mcp",
  "version": "0.3.0",
  "type": "module",
  "main": "mcp-starter/server.js",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@eslint/js": "^9.37.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.37.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.1",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "start:ps": "powershell -c \"cd mcp-starter; npm start\"",
    "start": "cd mcp-starter && npm start",
    "dev": "powershell -c \"cd mcp-starter; npm run dev\"",
    "docker:build": "docker build -f Dockerfile.mcp -t spellbook-mcp:0.3.0 .",
    "docker:run": "docker run --rm -it spellbook-mcp:0.3.0",
    "docker:acceptance": "docker run --rm -it -v ${PWD}/mcp-starter/logs:/app/mcp-starter/logs spellbook-mcp:0.3.0 /bin/sh -c \"cd /app && npm run acceptance\"",
    "smoketest": "powershell -c \"./scripts/run-acceptance-docker.ps1\"",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "npx prettier -w .",
    "format:check": "npx prettier -c .",
    "acceptance": "npx cucumber-js",
    "acceptance:logging": "cross-env LOG_MCP=1 npx cucumber-js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "dotenv": "^17.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "fast-glob": "^3.3.3"
  }
}
